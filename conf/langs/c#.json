{
	"name": "c#",

	"c#":
	{
		"project": [
			{
			  "name": "File",
			  "id": "file",
			  "append": ".cs"
			}
		],

		"types": [
			{
				"name": "string",
				"format": "string [name] = \"[value]\";"
			}, 
			{
				"name": "float",
				"format": "float [name] = [value]f;"
			},
			{
				"name": "int",
				"format": "int [name] = [value];"
			},
			{
				"name": "bool",
				"format": "bool [name] = [value];"
			}
		],

		"templates": [
			{
				"id": "function",
				"name": "Function",
				"format": "[return] [name]([value]) {\n\treturn [return];\n}",
				"data": [
					{
					  "id": "type",
					  "name": "Return Type",
					  "type": "dropdown"
					},
					{
					  "id": "arguments",
					  "name": "Arguments",
					  "type": "array"
					}
				  ]
			},
			{
				"id": "class",
				"name": "Class",
				"format": "[modifier] class [name][begin] : [base][end] {\n# #\n}",
				"data": [
					{
						"id": "modifier",
						"name": "Select Modifier",
						"type": "dropdown"
					}
				]
			},
			{
				"id": "variable",
				"name": "Variable",
				"format": "[type] [name] = [value];\n}",
				"data": [
					{
						"id": "type",
						"name": "Select Type",
						"type": "dropdown"
					},
					{
						"id": "enter",
						"name": "Value",
						"type": "string"
					}
				]
			}
		],

		"modifiers": ["public", "protected", "private"],

		"singleCommentRule": "//[value]",
		"multiCommentRule": "/*\n[value]\n*/"
	}
}