{
	"gml":
	{
		"extension": "gml",

		"types": [
			{
				"name": "string",
				"format": "[name] = \"[value]\";"
			},
			{
				"name": "real",
				"format": "[name] = [value];"
			},
			{
				"name": "array",
				"format": "[name] = array_create([value]);"
			},
			{
				"name": "boolean",
				"format": "[name] = [value];"
			},
			{
				"name": "enum",
				"format": "enum [name] {\n[value]\n}"
			}
		],

		"templates": [
			{
				"name": "function",
				"format": "function [name]([value]) {\n\treturn [return];\n}"
			},
			{
				"name": "script",
				"format": ""
			}
		],

		"singleCommentRule": "//[value]",
		"multiCommentRule": "/*\n[value]\n*/"
	}
}	