{
	"name": "gml",

	"gml":
	{
		"project": [
			{
			  "id": "file",
			  "name": "File",
			  "append": ".gml"
			}
		],
		
		"types": [
			{
				"name": "string",
				"format": "[name] = \"[value]\";"
			},
			{
				"name": "real",
				"format": "[name] = [value];"
			},
			{
				"name": "array",
				"format": "[name] = array_create([value]);"
			},
			{
				"name": "boolean",
				"format": "[name] = [value];"
			},
			{
				"name": "enum",
				"format": "enum [name] {\n[value]\n}"
			}
		],

		"templates": [
			{
				"id": "function",
				"name": "Function",
				"format": "function [name]([value]) {\n\treturn [return];\n}",
				"data": [
					{
					  "id": "return",
					  "name": "Return Type",
					  "type": "string"
					},
					{
					  "id": "arguments",
					  "name": "Arguments",
					  "type": "array"
					}
				  ]
			},
			{
				"name": "script",
				"format": ""
			},
			{
				"id": "variable",
				"name": "Variable",
				"format": "[name] = [value];\n}"
			}
		],

		"singleCommentRule": "//[value]",
		"multiCommentRule": "/*\n[value]\n*/"
	}
}